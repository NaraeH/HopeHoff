<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hopeHoff.dao.ShopDao">

	<resultMap type="Shop" id="shopMap">
		<id column="BBNO" property="businessNo"/>
   		<result column="SNAME" property="shopName"/>
   		<result column="SINTRO" property="shopIntro"/>
   		<result column="SINTROADDR" property="shopIntroAddr"/>
   		<result column="SDETAILADDR" property="shopDetailAddr"/>
   		<result column="SAREA" property="shopArea"/>
   		<result column="STYPE" property="shopType"/>
   		<result column="SSNACK" property="shopSnack"/>
   		<result column="MAINPHOTO" property="shopMainPhoto"/>
   		<result column="STIME" property="shopTime"/>
   		<result column="SPHONE" property="shopPhone"/>
   		<result column="SINFO" property="shopInfo"/>
	</resultMap>
	
	<resultMap type="ShopPhoto" id="photoMap">
		<id column="BBNO" property="businessNo"/>
		<result column="MAINPHOTO" property="mainPhoto"/>
		<result column="DETAILPHOTO1" property="detailPhoto1"/>
		<result column="DETAILPHOTO2" property="detailPhoto2"/>
		<result column="DETAILPHOTO3" property="detailPhoto3"/>
	</resultMap>

	<resultMap type="HashMap" id="sAndpMap">
		<result column="SNAME" property="shopName"/>
   		<result column="SINTRO" property="shopIntro"/>
   		<result column="SDETAILADDR" property="shopDetailAddr"/>
   		<result column="STIME" property="shopTime"/>
   		<result column="SPHONE" property="shopPhone"/>
		<result column="DETAILPHOTO1" property="detailPhoto1"/>
		<result column="DETAILPHOTO2" property="detailPhoto2"/>
		<result column="DETAILPHOTO3" property="detailPhoto3"/>
	</resultMap>
	
	<resultMap type="HashMap" id="sAndmMap"> 
		<result column="MNAME" property="menuName"/>
		<result column="MPRICE" property="menuPrice"/>
		<result column="MPHOTO" property="menuPhoto"/>
	</resultMap> 
	
	<resultMap type="HashMap" id="sAndpAndmMap">
		<result column="SNAME" property="shopName"/>
   		<result column="SINTRO" property="shopIntro"/>
   		<result column="SDETAILADDR" property="shopDetailAddr"/>
   		<result column="STIME" property="shopTime"/>
   		<result column="SPHONE" property="shopPhone"/>
		<result column="DETAILPHOTO1" property="detailPhoto1"/>
		<result column="DETAILPHOTO2" property="detailPhoto2"/>
		<result column="DETAILPHOTO3" property="detailPhoto3"/>
		<result column="MNAME" property="menuName"/>
		<result column="MPRICE" property="menuPrice"/>
		<result column="MPHOTO" property="menuPhoto"/>
	</resultMap>
	
	
	<select id="selectList" parameterType="map" resultMap="shopMap">
		SELECT SHOP.BBNO, SNAME, SINTRO, SINTROADDR, SDETAILADDR, SPHONE, SAREA, STYPE, SSNACK, MAINPHOTO 
		FROM SHOP LEFT OUTER JOIN SHOPPHOTO 
		USING(BBNO)
		<choose>
		<when test="keywordGroup == 'SAREA'">
			WHERE SAREA = #{keyword}
		</when>
		<when test="keywordGroup == 'STYPE'">
			WHERE STYPE = #{keyword}
		</when>
		<when test="keywordGroup == 'SSNACK'">
			WHERE SSNACK = #{keyword}
		</when>
		</choose>
	</select>
	
  	<select id="selectOne" parameterType="String" resultMap="shopMap">
 		SELECT STIME, SPHONE, SNAME, SINFO, SDETAILADDR
		FROM SHOP 
		WHERE BBNO = #{businessNo}
	</select>
	
	<select id="selectPhoto" parameterType="String" resultMap="photoMap">
 		 SELECT BBNO, MAINPHOTO, DETAILPHOTO1, DETAILPHOTO2, DETAILPHOTO3
		 FROM SHOPPHOTO  
		 WHERE BBNO = #{businessNo}
	</select>

	<select id="showList" parameterType="String" resultMap="sAndpMap">
 		SELECT SNAME,STIME,SPHONE, SDETAILADDR, SINTRO FROM SHOP WHERE UID = #{userId}
 		select s.SNAME, s.STIME, s.SPHONE, s.SDETAILADDR, s.SINTRO, p.DETAILPHOTO1, p.DETAILPHOTO2, p.DETAILPHOTO3 FROM SHOPPHOTO p, SHOP s WHERE p.BBNO = s.BBNO and s.UID=#{userId}
	</select>
	
	<select id="showMenu" parameterType="String" resultMap="sAndmMap">
 		select m.MNAME, m.MPRICE, m.MPHOTO from MENU m, SHOP s where m.BBNO = s.BBNO and s.UID=#{userId}
	</select>  
	
	<select id="showInfo" parameterType="String" resultMap="sAndpAndmMap">
	select s.SNAME, s.STIME, s.SPHONE, s.SDETAILADDR, s.SINTRO, p.DETAILPHOTO1, p.DETAILPHOTO2, p.DETAILPHOTO3, m.MPHOTO, m.MPRICE, m.MNAME FROM SHOPPHOTO p, SHOP s, MENU m WHERE p.BBNO = s.BBNO and s.BBNO = m.BBNO and s.UID=#{userId}
	</select> 
	
	
	<update id="showUpdate" parameterType="map">
	 update SHOP set STIME=#{time}, SPHONE=#{phone}, SDETAILADDR=#{addr}, SINTRO=#{intro} where SNAME=#{name}
	</update> 
	
<!-- 	<select id="selectMenu" parameterType="String" resultMap="Menu">
 		 SELECT MAINPHOTO, DETAILPHOTO1, DETAILPHOTO2, DETAILPHOTO3
		 FROM SHOP, SHOPPHOTO  
		 WHERE SHOP.BBNO = SHOPPHOTO.BBNO
		 AND SHOP.SNAME = #{shopName}
	</select> -->
	
</mapper>
