<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hopeHoff.dao.UserDao">

	<resultMap type="User" id="userMap">
		<!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
		<id column="UID" property="userId" />
		<result column="UPASSWORD" property="userPassword" />
		<result column="UEMAIL" property="userEmail" />
		<result column="UTYPE" property="userType" />
		<result column="UNAME" property="userName" />
	<result column="UPHONE" property="userPhone" />
	</resultMap>
	
	<sql id="userSelect">
    SELECT UID,UNAME,UPHONE,UEMAIL
    FROM USER
  </sql>
  
  <select id="userSelectOne" parameterType="map" resultMap="userMap">
  	  <include refid="userSelect"/>
  	  WHERE UID=#{value}
  
  </select>
  


</mapper>